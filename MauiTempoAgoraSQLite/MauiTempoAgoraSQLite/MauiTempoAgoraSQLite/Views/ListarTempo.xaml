<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTempoAgoraSQLite.Views.ListarTempo"
             Title="ListarTempo">
	<ContentPage.ToolbarItems>
		<ToolbarItem Text="adicionar" Clicked="ToolbarItem_Clicked"/>
		<ToolbarItem Text="somar" Clicked="ToolbarItem_Clicked_1"/>
	</ContentPage.ToolbarItems>

	<VerticalStackLayout>
		<SearchBar x:Name="txt_search"
                   Placeholder="Busca de Previsoes do tempo"
                   TextChanged="txt_search_TextChanged"/>
		<ListView x:Name="lst_tempo" ItemSelected="lst_tempo_ItemSelected">
			<ListView.Header>
				<Grid ColumnDefinitions="*,*,*,*,*">
					<Label Grid.Column="0" Text="ID"/>
					<Label Grid.Column="1" Text="Descricao"/>
					<Label Grid.Column="2" Text="Latitude"/>
					<Label Grid.Column="3" Text="Longitude"/>
					<Label Grid.Column="4" Text="Temperatura máxima"/>
					<Label Grid.Column="4" Text="Temperatura mínima"/>
					<Label Grid.Column="4" Text="Ventania"/>
					<Label Grid.Column="4" Text="ensolarado"/>
					<Label Grid.Column="4" Text="Por do sol"/>
				</Grid>
			</ListView.Header>
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.ContextActions>
							<MenuItem Text=" Remover" Clicked="MenuItem_Clicked"/>
						</ViewCell.ContextActions>
						<Grid ColumnDefinitions="*,*,*,*,*">
							<Label Grid.Column="0" Text="{Binding Id}"/>
							<Label Grid.Column="1" Text="{Binding Descricao}"/>
							<Label Grid.Column="2" Text="{Binding Preco}"/>
							<Label Grid.Column="3" Text="{Binding Quantidade}"/>
							<Label Grid.Column="4" Text="{Binding Total}"/>

						</Grid>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</VerticalStackLayout>


</ContentPage>